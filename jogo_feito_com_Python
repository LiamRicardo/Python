import time

def historia_aventura():
    print("¡Bienvenido a la aventura interactiva!")
    time.sleep(2)
    print("Te encuentras en medio de un bosque oscuro y misterioso.")
    time.sleep(2)
    print("Frente a ti, ves dos caminos: uno a la izquierda y otro a la derecha.")
    time.sleep(2)
    
    decision1 = input("¿Qué camino eliges? (izquierda/derecha): ").lower()
    
    if decision1 == "izquierda":
        print("Decidiste tomar el camino de la izquierda.")
        time.sleep(2)
        print("Sigues el sendero y te encuentras con una bifurcación:")
        time.sleep(2)
        
        decision2 = input("¿Continúas por la derecha o por la izquierda? (derecha/izquierda): ").lower()
        
        if decision2 == "derecha":
            print("Optaste por seguir hacia la derecha.")
            time.sleep(2)
            print("Te encuentras con una cueva oscura.")
            time.sleep(2)
            print("Dentro de la cueva, ves una luz brillante al fondo.")
            time.sleep(2)
            
            decision3 = input("¿Entras a la cueva o sigues por el camino? (entras/sigues): ").lower()
            
            if decision3 == "entras":
                print("Decidiste entrar a la cueva.")
                time.sleep(2)
                print("Dentro encuentras un tesoro brillante y escapas con éxito.")
                time.sleep(2)
                print("¡Felicidades, encontraste el final feliz!")
            else:
                print("Decidiste seguir por el camino.")
                time.sleep(2)
                print("Lamentablemente, el camino te lleva a un callejón sin salida.")
                time.sleep(2)
                print("Te pierdes en el bosque y no logras salir.")
                time.sleep(2)
                print("¡Fin de la aventura!")
        
        elif decision2 == "izquierda":
            print("Optaste por seguir hacia la izquierda.")
            time.sleep(2)
            print("Encuentras una cascada impresionante.")
            time.sleep(2)
            print("Decides descansar un momento y luego continuar tu camino.")
            time.sleep(2)
            print("¡Lograste llegar a un pueblo seguro al final del camino!")
            time.sleep(2)
            print("¡Felicidades, encontraste el final feliz!")
    
    elif decision1 == "derecha":
        print("Decidiste tomar el camino de la derecha.")
        time.sleep(2)
        print("Te encuentras con un río caudaloso que bloquea tu camino.")
        time.sleep(2)
        print("No puedes cruzar el río y decides regresar.")
        time.sleep(2)
        print("Mientras regresas, te encuentras con una criatura mágica.")
        time.sleep(2)
        
        decision2 = input("¿Te acercas a la criatura o la evitas? (acercas/evitas): ").lower()
        
        if decision2 == "acercas":
            print("Decidiste acercarte a la criatura.")
            time.sleep(2)
            print("La criatura resulta ser amigable y te ayuda a encontrar un puente cercano.")
            time.sleep(2)
            print("¡Logras cruzar el río y llegar a un pueblo seguro!")
            time.sleep(2)
            print("¡Felicidades, encontraste el final feliz!")
        else:
            print("Decidiste evitar a la criatura.")
            time.sleep(2)
            print("Sigues buscando un camino alternativo pero te pierdes en el bosque.")
            time.sleep(2)
            print("No logras encontrar la salida y quedas atrapado.")
            time.sleep(2)
            print("¡Fin de la aventura!")
    
    else:
        print("Decisión no válida. Fin de la aventura.")

# Inicia la historia
historia_aventura()

